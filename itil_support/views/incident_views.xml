<record id="view_incident_tree" model="ir.ui.view">
    <field name="name">incident.tree</field>
    <field name="model">itil_support.incident</field>
    <field name="arch" type="xml">
        <tree string="Incidents">
            <field name="name"/>
            <field name="description"/>
            <field name="priority"/>
            <field name="status"/>
        </tree>
    </field>
</record>

<record id="view_incident_form" model="ir.ui.view">
    <field name="name">incident.form</field>
    <field name="model">itil_support.incident</field>
    <field name="arch" type="xml">
        <form string="Incident">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="priority"/>
                    <field name="status"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="action_incident" model="ir.actions.act_window">
    <field name="name">Incidents</field>
    <field name="res_model">itil_support.incident</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="menu_incident_root" name="ITIL Support" sequence="10"/>
<menuitem id="menu_incident" name="Incidents" parent="menu_incident_root" action="action_incident" sequence="10"/>